<Page
    x:Name="pageRoot"
    x:Class="BrainShare.Views.TopicsPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrainShare.Views"
    xmlns:common="using:BrainShare.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <CollectionViewSource x:Name="topics" Source="{Binding TopicList}"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Hub>
            <Hub.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/bg.jpg" Stretch="UniformToFill"/>
            </Hub.Background>
            
            <Hub.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="14*"/>
                        <RowDefinition Height="11*"/>
                    </Grid.RowDefinitions>
                    
                    <Button x:Name="backButton" Margin="0,6,0,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button" Grid.Row="1"
                        Foreground="DarkBlue"
                        Background="DarkBlue"/>
                    <TextBlock Text ="Topics" Margin="98,10,-186,-10" Grid.RowSpan="2" Foreground="Black"/> 
                </Grid>
            </Hub.Header>
            
            <HubSection>
                <DataTemplate>
                    <GridView x:ConnectionId='1'
                    x:Name="TopicsGridView"        
                    AutomationProperties.AutomationId="ItemGridView"
                    AutomationProperties.Name="Items In Group"
                    ItemsSource="{Binding Source={StaticResource topics}}"                    
                    SelectionMode="None"
                    IsSwipeEnabled="false"
                    IsItemClickEnabled="True" 
                    Margin="0,20,0,0" 
                    CanDragItems="True"
                    CanReorderItems="True"
                                                                                            
                    AllowDrop="True"
                        >
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Left" Height="220" Grid.Row="1" VerticalAlignment="Top" Width="200" Margin="0,0,10,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="3*"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="10"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Image Source="ms-appx:///Assets/Course/topic.jpg" Stretch="Fill"  Grid.RowSpan="2" />
                                    <StackPanel Margin="10,10,0,0" Grid.Column="1" Opacity="0.9">
                                        <TextBlock Text="{Binding TopicTitle}" Foreground="Black" 
                                           Style="{StaticResource SubheaderTextBlockStyle}"                                            
                                           FontWeight="Bold"
                                           FontSize="30"/>
                                        <TextBlock Text="by" Foreground="Black" 
                                           Style="{StaticResource SubheaderTextBlockStyle}" 
                                         
                                           FontWeight="Bold"
                                           FontSize="16"/>
                                        <TextBlock Text="{Binding teacher}" Foreground="Blue" 
                                           Style="{StaticResource SubheaderTextBlockStyle}" 
                                           FontWeight="Bold"
                                           FontSize="16"/>
                                        <TextBlock Text="{Binding Updated_at}" Foreground="Red" 
                                           Style="{StaticResource SubheaderTextBlockStyle}"                                            
                                           FontWeight="Bold"
                                           FontSize="16"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </DataTemplate> 
            </HubSection>
        </Hub>
    </Grid>
</Page>


<SettingsFlyout
    x:Class="BrainShare.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrainShare.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    IconSource="Assets/SmallLogo.png"
    Title="Modules"
    d:DesignWidth="346">

    <!-- This StackPanel acts as a root panel for vertical layout of the content sections -->
    <StackPanel>
        <StackPanel Style="{StaticResource SettingsFlyoutSectionStyle}">
            <ToggleSwitch Margin="-6,0,0,0" Header = "Notes Module" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Toggled="Notes_Toggle" Name="Notes_Module"/>
            <ToggleSwitch Margin="-6,0,0,0" Header = "Library Modules" HorizontalAlignment="Stretch" Toggled="Library_Toggle" Name="Library_Module"/>
            <ToggleSwitch Margin="-6,0,0,0" Header = "Videos Module" HorizontalAlignment="Stretch" Toggled="Videos_Toggle" Name="Videos_Module"/>
        </StackPanel>
    </StackPanel>
</SettingsFlyout>
